@using Sandbox.Models
@model IEnumerable<Sandbox.Models.Book>

@{
    ViewBag.Title = "Books";
}

<h2>Books</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


    <table class="table table-striped table-bordered" data-bind="visible: books.length>0">
        <thead>
            <tr>
                <th>Author</th>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Isbn)</th>
                <th>@Html.DisplayNameFor(model => model.Synopsis)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: books">
            <tr>
                <td data-bind="text:  Author.FirstName + ' '+ Author.LastName"></td>
                <td data-bind="text: Title"></td>
                <td data-bind="text: Isbn"></td>
                <td data-bind="text: Synopsis"></td>
                <td data-bind="text: Description"></td>
                <td><span>
                    <a data-bind="attr: {href: '@Url.Action("Details")/' + Id}" class="btn btn-info">Details</a> | 
                        <a data-bind="attr: {href: '@Url.Action("Edit")/' + Id}" class="btn btn-primary">Edit</a> | 
                        <a data-bind="attr: {href: '@Url.Action("Delete")/' + Id}" class="btn btn-danger">Delete</a>
                    </span></td>
            </tr>
        </tbody>
    </table>

@section Scripts{
    <script>
        function ViewModel(books){
        var self = this;
        self.books = books;
        };
        var viewModel = new ViewModel(@Html.HtmlConvertToJson(Model));
        ko.applyBindings(viewModel);
    </script>
    }
