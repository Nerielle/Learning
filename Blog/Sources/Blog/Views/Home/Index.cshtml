@using System.Collections
@using Newtonsoft.Json
@model IList<Dal.Article>
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            @*<h2>Articles</h2>*@
            <br />
            <select multiple class="form-control" aria-selected="True" data-bind="
    options: articles,
    optionsText: 'title',
    selectedOptions:selectedItem
    ">
            </select>
        </div>
        <br />
        <div class="col-md-8">
            <form class="form-horizontal">
                <div class="row">
                    <div class="media-heading">
                        <h2 class="col-sm-10"  id="inputTitle" data-bind="value: selectedItem[0].title">title
                        </h2>
                    </div>
                    <div class="text-justify text-info">
                        <p class="col-sm-10 "  id="inputDescription" data-bind="text: selectedItem.description">desc
                        </p>
                    </div>
                    <div class="text-left">
                        <p class="col-sm-10" id="inputContent" data-bind="text: selectedItem.content">ocnt
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @JavaScript.AddCustom("ViewModels/default-page-view-model.js")
    <script type="text/javascript">
        @{
            IHtmlString articleList = Html.Raw(JsonConvert.SerializeObject(Model));
        }
        Blog.viewmodels.defaultpage.bindArticleList(@Html.Raw(articleList));
    </script>
}

