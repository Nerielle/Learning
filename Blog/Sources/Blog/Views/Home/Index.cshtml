@using System.Collections
@using Newtonsoft.Json
@model IList<Dal.Article>
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">

            <br />
            <select multiple class="form-control" aria-selected="True" data-bind="
    options: articles,
    optionsText: 'title',
    selectedOptions:selectedItem
    "></select>
        </div>
        <br />
        <div class="col-md-8" data-bind="visible: selectedItem().length!=0">
            <div class="row">
                <div class="col-sm-10 media-heading">
                    <h2 data-bind="text: selectedItem()[0].title"></h2>
                </div>
                <div class="col-sm-10 text-info">
                    <p >Spann: <span data-bind="text: selectedItem()[0].description"></span> spann
                    </p>
                </div>
                <div class="col-sm-10">
                    <p data-bind="text: selectedItem()[0].content">
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @JavaScript.AddCustom("ViewModels/default-page-view-model.js")
    <script type="text/javascript">
        @{
            IHtmlString articleList = Html.Raw(JsonConvert.SerializeObject(Model));
        }
        Blog.viewmodels.defaultpage.bindArticleList(@Html.Raw(articleList));
    </script>
}

