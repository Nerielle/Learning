@using System.Collections
@using Newtonsoft.Json
@model IList<Dal.Article>
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">

            <br />
            <select multiple class="form-control" aria-selected="True" data-bind="
    options: articles,
    optionsText: 'title',
    selectedOptions:selectedItems
    "></select>
        </div>
        <br />
        <div class="col-md-8" data-bind="visible: selectedItems().length!=0">
            <div class="row">
                <div class="col-sm-10 media-heading">
                    <h2 data-bind="text: selectedItems()[0].title "></h2></div>
                <div class="col-sm-10 text-info" data-bind="text: selectedItems()[0].description"></div>
                <div class="col-sm-10" data-bind="text: selectedItems()[0].content"></div>
                <hr/>
                <div class="col-sm-10">
                    <button class="btn-link btn-default">Добавить комментарий</button>
                    <button class="btn-link btn-default">Удалить комментарий</button>
                </div>
                <div class="col-sm-10">
                    <div class="" data-bind="foreach: selectedItems()[0].comments">
                        <div data-bind="text: date"></div>
                        <div data-bind="text: content"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @JavaScript.AddCustom("ViewModels/default-page-view-model.js")
    <script type="text/javascript">
        @{
            IHtmlString articleList = Html.Raw(JsonConvert.SerializeObject(Model));
        }
        Blog.viewmodels.defaultpage.bindArticleList(@Html.Raw(articleList));
    </script>
}

