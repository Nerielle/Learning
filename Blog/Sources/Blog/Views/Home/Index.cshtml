@using System.Collections
@using Newtonsoft.Json
@model IList<Dal.Article>
@{
    ViewBag.Title = "Home Page";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-4">
            @*<h2>Articles</h2>*@
            <br />
            <select multiple class="form-control" aria-selected="True" data-bind="foreach: articles">
                    <option data-bind="text: title"></option>
            </select>
        </div>
        <br />
        <div class="col-md-8">
            <form class="form-horizontal">
                <div class="row">
                    <div class="form-group">
                        <label for="inputTitle" class="col-sm-2 control-label">Title</label>
                        <div class="col-sm-10">
                            <input class="form-control" id="inputTitle" placeholder="Title">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputDescription" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="3" id="inputDescription" placeholder="Description"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputContent" class="col-sm-2 control-label">Content</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" rows="20" id="inputContent"></textarea>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{
    @JavaScript.AddCustom("ViewModels/default-page-view-model.js")
    <script type="text/javascript">
        @{
            IHtmlString articleList = Html.Raw(JsonConvert.SerializeObject(Model));
        }
        Blog.viewmodels.defaultpage.bindArticleList(@Html.Raw(articleList));
    </script>
}

